<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:id="@+id/element_view_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        >
        <TextView
            android:id="@+id/element_view_friend_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_buttons4"
            android:textSize="20sp"
            android:textColor="#012"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/element_view_me_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_buttons3"
            android:textColor="#012"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>